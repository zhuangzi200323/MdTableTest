<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.jack.md.table.test.model.VoiceItem" />
        <variable
            name="handler"
            type="com.jack.md.table.test.listener.CommonListener" />
        <variable
            name="pos"
            type="int" />
    </data>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.PreachActivity"
    android:paddingTop="@dimen/padding_10"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_marginVertical="@dimen/padding_10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/robot_iv"
            android:layout_width="@dimen/w_h_100"
            android:layout_height="@dimen/w_h_100"
            android:layout_marginEnd="@dimen/margin_10"
            android:src="@mipmap/robot_icon"/>
        <ImageView
            android:id="@+id/people_iv"
            android:layout_width="@dimen/w_h_100"
            android:layout_height="@dimen/w_h_100"
            android:layout_marginEnd="@dimen/margin_10"
            android:src="@mipmap/people_icon"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/blue_FF00FFEB"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
</layout>